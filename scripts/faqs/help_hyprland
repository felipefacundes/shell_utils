#!/bin/bash
######### Hyprland Shortcut Help #########

if command -v ccat >/dev/null 2>&1 ; then
    ccat --color=always ~/.config/hypr/hyprland.conf | less -i -R -N --use-color --color=HBCEMNPRSWsu
else
    cat --color=always ~/.config/hypr/hyprland.conf | less -i -R -N --use-color --color=HBCEMNPRSWsu
fi