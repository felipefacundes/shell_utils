#!/usr/bin/env bash
# License: GPLv3
# Credits: Felipe Facundes

: <<'DOCUMENTATION'
A utility to facilitate the use of the TAR command
DOCUMENTATION

directory="$1"

if [[ ! -d "$directory" ]]; then
	echo "${0##*/} file or directory"
	echo "Or"
    echo 'tar -cf file_name.tar file_or_dir'
else
    tar -cf "${directory%.*}.tar" "$directory"
fi